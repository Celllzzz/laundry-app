// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum untuk Role User
enum Role {
  ADMIN
  CUSTOMER
}

// Enum untuk Status Mesin
enum MachineStatus {
  AVAILABLE
  BUSY
  MAINTENANCE
}

// Enum untuk Status Booking/Cucian
enum BookingStatus {
  PENDING     // Menunggu pembayaran
  PAID        // Sudah bayar, siap cuci
  COMPLETED   // Selesai diambil
  CANCELLED   // Dibatalkan
}

enum WashStage {
  QUEUED      // Menunggu antrian
  WASHING     // Sedang mencuci
  RINSING     // Membilas
  DRYING      // Mengeringkan
  FINISHED    // Selesai
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  phone     String?
  role      Role      @default(CUSTOMER)
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Machine {
  id          String        @id @default(cuid())
  name        String        // Contoh: "Washer 01"
  type        String        // "Washer" atau "Dryer"
  capacity    Int           // Dalam Kg
  status      MachineStatus @default(AVAILABLE)
  bookings    Booking[]
}

model Booking {
  id            String        @id @default(cuid())
  userId        String
  machineId     String
  startTime     DateTime
  endTime       DateTime
  totalPrice    Int
  
  status        BookingStatus @default(PENDING)
  washStage     WashStage     @default(QUEUED)
  
  paymentMethod String?       // "QRIS", "CASH", "TRANSFER"
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  user          User          @relation(fields: [userId], references: [id])
  machine       Machine       @relation(fields: [machineId], references: [id])
}
